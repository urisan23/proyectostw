%body{:onload => "change_pass(#{o if defined? o});"}
.row-fluid
  #alert_placeholder2
.row-fluid
  .span3
    .hero-unit
      %center
        %h3 #{us.name}   
        %table{:border => "1"}
          %tr
            %td
              %img.profile{:src => "#{us.image}", :alt => "imagen de perfil"}
      %br
      %p
      %b Nombre:
      #{us.name} #{us.surnames}
      %p
      %b Email: 
      #{us.email}
      %p
      %b ID: 
      #{us.id}
      %p
      %b Archivos compartidos:
      Poner aqui un contador
      %p
      %b Mensajes nuevos:
      Poner aqui un contador
      %p
      %b Sobre mi:
      = Haml::Engine.new(us.comment.gsub(10.chr, '<br/>')).render
      %p
      %br
   
  .span9
    .hero-unit
      %h3 Asignaturas matriculadas

      %table
        %tr
        - us.subjects.each do |a|
          %a{:href => "/subjects/#{a.id}"} #{a.subjectname}
      %br
      %a{:href => "/"} Regresar